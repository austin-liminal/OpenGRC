{
    "name": "laravel/laravel",
    "type": "project",
    "description": "The skeleton application for the Laravel framework.",
    "keywords": [
        "laravel",
        "framework"
    ],
    "license": "MIT",
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/MangoldSecurity/filament-settings"
        }
    ],
    "require": {
        "php": "^8.2",
        "ext-fileinfo": "*",
        "aliziodev/laravel-taxonomy": "^2.8.0",
        "barryvdh/laravel-dompdf": "^3.1.1",
        "bezhansalleh/filament-language-switch": "^4.0",
        "dedoc/scramble": "^0.12.36",
        "dutchcodingcompany/filament-socialite": "^3.0",
        "eightcedars/filament-inactivity-guard": "^1.0",
        "erusev/parsedown": "^1.7.4",
        "filament/actions": "^4.0",
        "filament/filament": "^4.0",
        "filament/forms": "^4.0",
        "filament/notifications": "^4.0",
        "filament/tables": "^4.0",
        "guzzlehttp/guzzle": "^7.10.0",
        "jeffgreco13/filament-breezy": "^3.0",
        "kirschbaum-development/commentions": "^0.7.5",
        "laravel/framework": "^12.0",
        "laravel/mcp": "^0.5.1",
        "laravel/passport": "^12.0",
        "laravel/prompts": "^0.3.10",
        "laravel/sanctum": "^4.2.4",
        "laravel/tinker": "^2.11.0",
        "league/flysystem-aws-s3-v3": "^3.30.1",
        "leandrocfe/filament-apex-charts": "^4.0",
        "mangoldsecurity/filament-settings": "^2.4",
        "pxlrbt/filament-activity-log": "^2.0",
        "socialiteproviders/auth0": "^4.2",
        "socialiteproviders/google": "^4.1",
        "socialiteproviders/microsoft-azure": "^5.2",
        "socialiteproviders/okta": "^4.5",
        "spatie/laravel-permission": "^6.24.0"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.16.3",
        "cyclonedx/cyclonedx-php-composer": "^5.3.0",
        "fakerphp/faker": "^1.24.1",
        "filament/upgrade": "^4.0",
        "larastan/larastan": "^3.9",
        "laravel/boost": "^1.8",
        "laravel/dusk": "^8.3.4",
        "laravel/pint": "^1.27.0",
        "laravel/sail": "^1.52.0",
        "mockery/mockery": "^1.6.12",
        "nunomaduro/collision": "^8.6",
        "phpunit/phpunit": "^11.0",
        "spatie/laravel-ignition": "^2.10.0",
        "spatie/laravel-ray": "^1.43.3",
        "yethee/tiktoken": "^1.1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        },
        "classmap": [
            "app/Mcp/Tools/EntityTools.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi",
            "@php artisan filament:upgrade"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force",
	    "@php generate-sbom.php"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "docker-build": [
            "docker build -t opengrc ."
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "platform-check": false,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true,
            "cyclonedx/cyclonedx-php-composer": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
